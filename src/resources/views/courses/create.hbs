<div class="mt-4">
            <h3>Đăng khóa học</h3>  

            <form method="POST " action="/courses/store">
                <div class="mb-3">
                    <label for="name" >Tên khóa khọc </label>
                    <input type="text" class="form-control" id="name" name ="name">
                </div>
            
                <div class="mb-3">
                    <label for="description" >Mô tả khóa khọc </label>
                    <input type="text" class="form-control" id="description" name ="description">
                </div>

                <div class="mb-3">
                    <label for="videoID" >Video khóa khọc </label>
                    <input type="text" class="form-control" id="videoID" name ="videoID">
                </div>
            
                <div class="mb-3">
                    <label for="level" >Trình độ </label>
                    <input type="text" class="form-control" id="level" name ="level">
                </div>
            
            
                <button type="submit" class="btn btn-primary">Thêm khóa học</button>
            </form>
</div>